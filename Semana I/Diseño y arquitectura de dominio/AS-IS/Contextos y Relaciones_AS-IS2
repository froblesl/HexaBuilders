/* ===================================
 * AS-IS — El Monolito de Alpes Partners
 * =================================== */

Domain GestionProgramasPartners {
    domainVisionStatement = "Gestion integral de programas de partners: reclutamiento, contratos, atribucion, campañas, cumplimiento y pagos."

    Subdomain ReclutamientoYDescubrimiento {
        type = CORE_DOMAIN
        domainVisionStatement = "Captacion y calificacion de partners (busqueda/marketplace)."
    }
    Subdomain OnboardingYContratos {
        type = CORE_DOMAIN
        domainVisionStatement = "Alta de partners y gestion de terminos/acuerdos."
    }
    Subdomain TrackingYAtribucion {
        type = CORE_DOMAIN
        domainVisionStatement = "Eventos (clic/lead/venta) y resolucion de atribucion."
    }
    Subdomain Campanas {
        type = CORE_DOMAIN
        domainVisionStatement = "Configuracion y ejecucion de campañas con partners."
    }
    Subdomain PagosYPayouts { // Clasificación original
        type = CORE_DOMAIN
        domainVisionStatement = "Calculo, conciliacion y pago de comisiones."
    }
    Subdomain GestionRelacionPartners {
        type = CORE_DOMAIN
        domainVisionStatement = "Perfil 360 y gestion de relacion con partners."
    }
    Subdomain CumplimientoYAntifraude { // Clasificación original
        type = CORE_DOMAIN
        domainVisionStatement = "Politicas, verificacion y deteccion de fraude."
    }
    Subdomain OrquestacionDeProcesos {
        type = SUPPORTING_DOMAIN
        domainVisionStatement = "Motor generico de tareas/estados y aprobaciones."
    }
    Subdomain IdentidadAccesoYPermisos {
        type = GENERIC_DOMAIN
        domainVisionStatement = "Autenticacion y autorizacion (SSO/RBAC) transversal."
    }
}

// Representación del Monolito
BoundedContext AlpesPartnersMonolith implements ReclutamientoYDescubrimiento, OnboardingYContratos, TrackingYAtribucion, Campanas, PagosYPayouts, GestionRelacionPartners, CumplimientoYAntifraude, OrquestacionDeProcesos, IdentidadAccesoYPermisos {
    domainVisionStatement = "Un único sistema monolítico que gestiona todas las capacidades de la plataforma de Alpes Partners. El alto acoplamiento interno causa demoras en el desarrollo y despliegue."
    implementationTechnology = "Monolithic Architecture"
}

ContextMap AlpesPartners_ASIS {
    state = AS_IS
    contains AlpesPartnersMonolith
}